{
    "name": "lqdt\/wordpress-bundler",
    "description": "Wordpress bundler fully automates production release for wordpress plugins and themes and brings convenient tools to configure them",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Lqdt\\WordpressBundler\\": "src\/",
            "Lqdt\\WordpressBundler\\Test\\": "tests\/"
        }
    },
    "authors": [
        {
            "name": "Liqueur de Toile",
            "email": "contact@liqueurdetoile.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "symfony\/console": "^5.4",
        "symfony\/filesystem": "^5.4",
        "adbario\/php-dot-notation": "^3.1",
        "mindplay\/composer-locator": "^2.1",
        "laminas\/laminas-log": "^2.15",
        "nelexa\/zip": "^4.0",
        "humbug\/php-scoper": "^0.17.5",
        "togos\/gitignore": "^1.1"
    },
    "require-dev": {
        "phpunit\/phpunit": "^9.5",
        "slevomat\/coding-standard": "^8.4",
        "squizlabs\/php_codesniffer": "^3.7",
        "phpstan\/phpstan": "^1.8",
        "phpstan\/phpstan-phpunit": "^1.1",
        "vimeo\/psalm": "^4.27",
        "symfony\/var-dumper": "^5.4"
    },
    "bin": [
        "bin\/wpbundler"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect\/phpcodesniffer-composer-installer": true,
            "mindplay\/composer-locator": true
        }
    }
}